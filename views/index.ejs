<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-[url(https://images.pexels.com/photos/3816395/pexels-photo-3816395.jpeg)] flex items-center justify-center before:content-[''] before:absolute before:inset-0 before:bg-black before:opacity-60"
>
  <div class="relative w-[25vw] bg-zinc-100 px-6 py-6 rounded-[20px]">
    <h1 class="text-[30px] capitalize text-center tracking-tight font-semibold text-zinc-700 mb-3">
      Welcome to Pintrest
    </h1>
    <form action="/login" method="post">
      <label for="username">Username</label>
      <input
        class="h-[35px] border-1 rounded-md block mt-3 mb-3 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="Enter your username"
      />
      <label for="password">Password</label>
      <input
        class="h-[35px] border-1 rounded-md block mt-3 w-full px-3 py-2"
        type="text"
        name="password"
        placeholder="Enter your password"
      />
      <a class="mt-2 font-semibold inline-block text-zinc-500 text-sm" href="#">
        Forgot your password
      </a>
      <input
        class="border-1 rounded-full block mt-3 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Login"
      />
      <p class="text-xs font-semibold text-zinc-700 mt-2 text-center">
        By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our
        Privacy Policy. Notice at collection.
      </p>
    </form>
    <a
      href="/register"
      class="inline-block text-xs mt-4 text-zinc-700 text-center w-full font-semibold"
    >
      Don't have an account ? Sign Up
    </a>
  </div>
</div>

