<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-700 text-white px-10 py-5">
  <h1 class="text-xl text-center capitalize">Create new post</h1>
  <hr class="opacity-20 mt-2" />
  <div class="w-full">
    <form action="/createPost" method="post" enctype="multipart/form-data" class="w-1/3 mx-auto mt-10">
      <input
        class="block w-full px-3 py-2 rounded-md mt-2 text-white bg-zinc-500"
        type="file"
        name="postImage"
      />
      <input
        class="block w-full px-3 py-2 border rounded-md mt-2"
        type="text"
        placeholder="Title"
        name="title"
      />
      <textarea
        class="block w-full px-3 py-2 h-40 border rounded-md mt-2"
        type="text"
        placeholder="Description"
        name="description"
      ></textarea>
      <input class="block w-full px-3 py-2 rounded-md mt-2 bg-red-700" type="submit" />
    </form>
  </div>
</div>

